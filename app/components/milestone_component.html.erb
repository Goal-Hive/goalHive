<div class="flex justify-between" data-controller="toggle">
  <%= content %>
  <!--    Progress State-->
  <div class="flex justify-center items-center  <%= @background %> p-2 gap-x-2 rounded-xl text-independence ">
    <%= image_tag @message_img %>
    <P class="<%= @text_color %>"><%= @message %></P>
  </div>

  <!--    Toggle Menu-->
  <div class="hidden flex justify-end items-center gap-x-1" data-toggle-target="toggledContent" data-controller="milestones">
    <%= button_to (image_tag 'delete.svg'),
                  milestone_path(@milestone), method: :delete,
                  class: "w-9 h-9 flex justify-center items-center rounded-2xl p-2 bg-red-100" %>
    <%= button_to update_progress_milestone_path(id: @milestone.id, status: @status),
                  method: :post,
                  data: {
                    milestone_id: @milestone.id,
                    action: 'click->milestones#changeStatus' } do %>
      <div class="flex justify-center items-center gap-x-2 bg-zircon rounded-2xl p-2 text-independence inline-block font-medium">
        <%= image_tag @update_progress_img %>
        <span class="hidden md:block"><%= @update_progress %></span>
      </div>
    <% end %>
    <button data-action="click->toggle#toggleContent"
            class="flex justify-center items-center rounded-2xl bg-zircon w-7 h-7 text-xl text-independence p-2 font-medium">
      <span>&#10007;</span>
    </button>
  </div>
  <button data-action="click->toggle#toggleContent" data-toggle-target="toggleBtn">
    <%= image_tag 'dots.svg' %>
  </button>
</div>

<div class="flex justify-between items-center">
  <P class="text-yankeesBlue">
    <%= @milestone.description %>
  </P>

  <div class="flex justify-center items-center">
    <%= button_to (image_tag 'edit.svg'),
                  edit_milestone_path(@milestone),
                  method: :post,
                  class: "w-7 h-7 flex justify-center items-center rounded-2xl py-2 ml-2 px-2 bg-gray-100 inline-block font-medium" %>
    <%= image_tag 'milestone_handler.svg', class: 'my-handle cursor-move' %>
  </div>

</div>