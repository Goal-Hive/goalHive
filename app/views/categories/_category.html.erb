<div id="<%= dom_id category %>">
    <div
      data-controller="toggle"
      data-action="click->categories--navbar#select click->goals-filter#filterByCategory"
      data-category-id="<%= category.id %>"
      data-categories--navbar-target="category"
      class="navbar_category navbar_category_hover py-3 px-2 w-full">
        <button class="w-full flex justify-start items-center truncate"><%= category.name %></button>


      <div class="flex justify-center items-center gap-x-2">
        <!--      Delete, Category, Details-->
        <div class="hidden flex justify-end items-center gap-x-2" data-toggle-target="toggledContent" data-category-element="options">
          <%= button_to (image_tag 'delete.svg'),
                        category_path(category),
                        method: :delete,
                        form: { data: { turbo_confirm: 'Are you sure you want to delete this category?' } },
                        class: "w-7 h-7 flex justify-center items-center rounded-2xl py-2 px-2 bg-red-100" %>
          <%= button_to (image_tag 'edit.svg'),
                        edit_category_path(category),
                        method: :post,
                        class: "w-7 h-7 flex justify-center items-center rounded-2xl py-2 px-2 bg-gray-100 inline-block font-medium" %>
          <button data-action="click->toggle#toggleContent"
                  class="flex justify-center items-center rounded-2xl bg-light-bg-secondary w-7 h-7 text-xl text-light-text-darkPurple p-2 font-medium">
            <span>&#10007;</span>
          </button>
        </div>
        <button data-action="click->toggle#toggleContent" data-toggle-target="toggleBtn"
                data-category-element="btn" class="hidden"> <%= image_tag 'dots.svg' %> </button>
      </div>
    </div>
</div>
