<div id="<%= dom_id category %>"
     data-sortable-id=<%= category.id %>>
  <%= form_with(model: category,
                class: "contents") do |form| %>
    <% if category.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= hidden_field_tag :selected, true %>

    <div class="flex gap-x-3 text-lgx">
      <%= form.text_field :name,
                          class: "shadow rounded-md  outline-none w-full text-independence font-semibold",
                          placeholder: "New Category",
                          autofocus: true  %>
      <div class="text-independence  ">
        <%= form.submit '✓',
                        id: 'submit_category',
                        class: "cursor-pointer rounded-full align-middle bg-gray-100 w-full" %>
        <button class="rounded-full align-middle bg-gray-100 w-full">
          ✗
        </button>
      </div>
    </div>
  <% end %>
</div>
