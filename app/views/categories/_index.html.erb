<% if current_user %>
  <!--  Add Category, Categories-->
  <div class="bg-light-sideNav pb-2 h-fit w-full flex flex-col justify-between gap-y-2 border border-solid border-gray-200 rounded-lg ">
    <!--      Add a category-->
    <div class="sticky top-0 flex justify-between items-center bg-white w-full p-2 rounded-t-xl">
      <p class="font-semibold">Categories</p>
      <%= link_to '+', new_category_path,
                  data: { turbo_frame: "modal" },
                  class: "border border-solid border-gray-200 h-5 w-5 flex justify-center items-center p-4 bg-light-bg-secondary rounded-2xl text-2xl text-light-text-main" %>

    </div>
    <!--      Categories-->
    <div id="categories" class="w-full px-2 flex flex-col justify-start items-center gap-y-2">
      <div
        class="bg-white border border-solid border-gray-200 p-3 w-full rounded flex justify-between items-center">
        <%= button_to "Active ",
                      filter_by_status_goals_path(by_status: 'active'),
                      method: :post,
                      class: "text-light-text-categories font-semibold" %>
      </div>
      <div
        class="bg-white border border-solid border-gray-200 p-3 w-full rounded flex justify-between items-center">
        <%= button_to "Paused ",
                      filter_by_status_goals_path(by_status: 'paused'),
                      method: :post,
                      class: "text-light-text-categories font-semibold" %>
      </div>
      <div
        class="bg-white border border-solid border-gray-200 p-3 w-full rounded flex justify-between items-center">
        <%= button_to "Achieved ",
                      filter_by_status_goals_path(by_status: 'achieved'),
                      method: :post,
                      class: "text-light-text-categories font-semibold" %>
      </div>

      <%= render current_user.categories %>
    </div>
    <!--      end-->
  </div>
<% end %>
