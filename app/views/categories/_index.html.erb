<% if current_user %>
  <div class="pb-2 h-fit w-full flex flex-col justify-between gap-y-2">
    <!--      Categories-->
    <div id="categories" class="w-full px-2 flex flex-col justify-start items-center gap-y-2">
    <!--      Fixed Categories-->
      <% {active: "Active", paused: "Paused", achieved:"Achieved"}.each do |key, value| %>
        <div
          class="w-full ">
          <%= button_to value,
                        filter_by_status_goals_path(by_status: key),
                        method: :post,
                        class: "h-12 hover:bg-gray-50 bg-white border border-solid border-gray-200 p-3 rounded flex justify-between items-center text-light-text-categories font-semibold w-full" %>
        </div>
     <% end %>
      <%= render current_user.categories %>
    </div>
  </div>
<% end %>
