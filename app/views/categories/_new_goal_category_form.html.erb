<div data-controller="toggle">
  <div class="hidden flex justify-start items-center gap-x-3" data-toggle-target="toggledContent">
    <%= form.fields_for :category_attributes do |category_fields| %>
      <div class="flex gap-x-3 w-full">
        <%= category_fields.text_field :name,
                            class: "text-doveGray shadow rounded-md outline-none w-full font-base",
                            placeholder: "Type your new category name.....",
                            value: '',
                            'data-stepper-target':'newGoalCategoryInput'%>
        <div class="text-light-text-categories dark:text-white flex gap-x-3">
          <%#= button_tag type: 'submit', class: "align-middle bg-green-100 p-2 text-green-500  whitespace-nowrap" do %>
<!--            &#10003 confirm-->
          <%# end %>
          <button data-action="click->toggle#toggleContent
                              click->stepper#enableCategoriesOptions
                              click->stepper#resetnewGoalCategoryInput"
                  class="bg-red-100 p-2 text-red-500 whitespace-nowrap">
            &#10007 cancel
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <button data-action="click->toggle#toggleContent click->stepper#unselectCategoriesOptions"
          data-toggle-target="toggleBtn"
          class="text-ceruleanBlue bg-zircon p-2 flex justify-start w-fit rounded-md">
    <p>Create New Category?</p>
  </button>
</div>

