<div class="text-black w-full h-screen flex justify-center items-center bg-light-bg-lightYellow " >
<img src="/orangeblur.png"  alt="orange blur" class="absolute top-0  ml-60 w-36 h-auto object-contain z-10 "  /> 
<img src="/purpleblur.png"  alt="purple blur" class="absolute bottom-0 mr-60  w-36 h-auto object-contain z-10" /> 
<div class="bg-white border-2 border-solid border-gray-100 max-w-md w-fit p-8 rounded-xl flex flex-col gap-y-3 items-center z-20">
<div class="w-full text-center p-4 rounded-lg" style="background: linear-gradient(82deg, #3A00FF -19.94%, #9773FE 31.65%, #F4E7FD 100.99%); background-size: 100% auto; background-position: center;">  
    <img src="/welcoming-hive.jpg" alt="Group of welcoming people" class="mt-[-32px] pt-6 w-72 max-w-full h-auto object-contain mx-auto" />
</div>
<div class=" flex flex-col gap-y-3 w-full"> 
<div class=" text-center">
  <h2 class="text-2xl font-bold p-2 text-light-text-darkGray">Welcome to Goal<span class="text-light-text-lightPurple">Hive</span></h2>
 </p>
</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="flex flex-col gap-y-3">
   
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "rounded border-gray-300 bg-gray-100 p-1 text-sm font-normal w-full" , placeholder: "Email" %>
        <%# if @minimum_password_length %>
<!--          <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
        <%# end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "rounded border-gray-300 bg-gray-100 p-1 text-sm font-normal", placeholder: "Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded border-gray-300 bg-gray-100 p-1 text-sm font-normal w-full" , placeholder: "Confirm Password" %>
        <div class="btn-primary">
          <%= f.submit "Sign up" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>