<%= render layout: 'partials/common/sign_container' do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-y-3">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded border-gray-300 bg-gray-100 p-1 text-sm font-normal w-full", placeholder: "Email" %>
      <%# if @minimum_password_length %>
      <!--          <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
      <%# end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded border-gray-300 bg-gray-100 p-1 text-sm font-normal", placeholder: "Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded border-gray-300 bg-gray-100 p-1 text-sm font-normal w-full", placeholder: "Confirm Password" %>
      <div class="btn-primary">
        <%= f.submit "Sign up" %>
      </div>
    </div>
  <% end %>
<% end %>

