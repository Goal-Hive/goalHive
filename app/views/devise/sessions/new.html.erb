<div class="text-black w-full h-screen flex justify-center items-center bg-light-bg-lightYellow">
  <div class="bg-white border-2  border-solid border-gray-100 w-fit p-5 rounded-xl flex flex-col gap-y-3">
    <h2 class="text-center">Welcome to GoalHive</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col gap-y-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="btn-primary">
<!--        <div class="actions">-->
          <%= f.submit "Log in" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
