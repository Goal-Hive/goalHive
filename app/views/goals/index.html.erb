<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="new_goal">
    <%= render partial: "goals/form", locals: { goal: Goal.new } %>
  </div>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Goals</h1>
    <%#= link_to 'New goal', new_goal_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="goals" class="min-w-full">
    <%= render @goals %>
  </div>
</div>
