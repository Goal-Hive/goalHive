<div class='h-full w-full min-h-screen flex justify-around items-start py-5 px-2'>
  <!--  1st section-->
  <div
    class='mb-3 p-3  bg-white w-3/12 border-solid border border-gray-200 rounded-[8px]'
  >
    <p class="font-bold text-sm text-light-text-darkPurple leading-5 text-base mb-4">
      Your Motivation
    </p>
    <blockquote
      suppressContentEditableWarning={true}
      class='focus:border-0 bg-light-bg-lightGray p-3 text-doveGray rounded-[8px]'
      contentEditable='true'
    >
      <%= @goal.motivation %>
    </blockquote>
  </div>
  <!--  2nd section-->
  <div class="w-6/12 flex flex-col gap-y-5">
    <p class="text-2xl">
      <%= @goal.description %>
    </p>
    <!--    Tabs titles-->
    <div data-controller="tabs" data-tabs-active-tab="-mb-px border rounded-3xl bg-white">
      <ul class="text-light-text-main list-reset flex border mb-5 rounded-3xl p-1 w-fit bg-slate-50">

        <% { all: "All Milestones", achieved: "Achieved Milestones", in_progress: "In-progress Milestones" }.each do |tab, text| %>
          <li class="-mb-px mr-1" data-tabs-target="tab" data-action="click->tabs#change">
            <a class="rounded-3xl inline-block py-2 px-4 hover:text-light-text-details-selectedTab font-semibold no-underline" href="#">
              <%= text %></a>
          </li>
        <% end %>
      </ul>

      <!--      Tab Content-->
      <div id="milestones" class="hidden p-4 flex flex-col gap-y-3" data-tabs-target="panel">
        <%= render @goal.milestones %>
      </div>

      <div id="achievedMilestones" class="hidden p-4 flex flex-col gap-y-3" data-tabs-target="panel">
        <%= render @goal.milestones.where(status: 'achieved') %>
      </div>
      <div id="inProgressMilestones" class="hidden p-4 flex flex-col gap-y-3" data-tabs-target="panel">
        <%= render @goal.milestones.where(status: 'in_progress') %>
      </div>

    </div>

  </div>
  <!--  3rd section-->
  <div class="">
    <%= render @goal %>
  </div>
</div>