<main class="w-full h-full flex flex-col">
  <%= render 'partials/common/notification' %>
  <%= render 'partials/common/header' %>
  <%= render 'partials/common/modal' %>

  <div class="flex justify-around top-16 h-full">
    <% if content_for?(:side_nav) %>
      <div class="w-2/12">
        <%= yield(:side_nav) %>
      </div>
    <% end %>
    <div class="bg-light-body w-10/12">
      <%= yield %>
    </div>
  </div>
</main>