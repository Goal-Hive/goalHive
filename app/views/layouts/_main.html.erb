<main class="w-full flex flex-col">
  <%= render 'partials/common/notification' %>
  <%= render 'partials/common/header' %>
  <%= render 'partials/common/modal' %>

  <div class="flex w-full justify-around dark:text-white overflow-y-auto
<%= user_signed_in? ? 'top-16 h-[calc(100vh-4.01rem)]' : '' %>">
    <% if content_for?(:side_nav) %>
      <div class="w-2/12 dark:bg-dark-navbar flex justify-center items-center ">
        <%= yield(:side_nav) %>
      </div>
    <% end %>
    <div class="bg-light-body flex-grow dark:bg-dark-body overflow-y-auto">
      <%= yield %>
    </div>
  </div>
</main>