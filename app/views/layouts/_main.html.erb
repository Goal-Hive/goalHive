<main class="w-full flex flex-col">
  <%#= debug(params) if Rails.env.development? %>
  <%= render 'partials/common/notification' %>
  <%= render 'partials/common/header' %>
  <%= render 'partials/common/modal' %>

  <div class="flex w-full justify-around dark:text-white overflow-y-auto
<%= user_signed_in? ? 'top-16 h-[calc(100vh-5.01rem)]' : '' %>" data-controller="goals-filter">
    <% if content_for?(:side_nav) %>
      <%= yield(:side_nav) %>
    <% end %>
    <% if content_for?(:goals_list) %>
      <%= yield(:goals_list) %>
    <% else content_for?(:goal_details)%>
      <div class="bg-light-body overflow-y-auto flex-grow">
        <%= yield (:goal_details)%>
      </div>
    <% end %>
  </div>
</main>