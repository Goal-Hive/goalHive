<main class="w-full flex flex-col bg-gray-50"
      data-controller="toggle-side-nav
                       goals-filter
                       dialog"
      data-action="resize@window->toggle-side-nav#handleBigScreen
                   keyup@window->toggle-side-nav#closeWithKeyboard">
  <%#= debug(params) if Rails.env.development? %>
  <%= render 'partials/common/modal' %>
  <div id="flash" class="absolute bottom-5 right-5 flex flex-col gap-y-2">
    <%= render 'partials/common/notification' %>
  </div>
  <%= render 'partials/common/header' %>

  <div class="flex w-full justify-around overflow-y-auto relative top-[0]
<%= user_signed_in? ? 'top-16 h-[calc(100vh-7.5rem)] md:h-[calc(100vh-8.5rem)]' : '' %>">
    <% if content_for?(:side_nav) %>
      <%= yield(:side_nav) %>
    <% end %>
    <% if content_for?(:goals_list) %>
      <%= yield(:goals_list) %>
    <% elsif content_for?(:goal_details) %>
      <div class="text-lotion overflow-y-auto flex-grow">
        <%= yield (:goal_details) %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </div>
</main>