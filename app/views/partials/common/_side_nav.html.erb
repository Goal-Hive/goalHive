<!--Side navigation bar-->
<div class="gap-y-4 py-4 px-4 bg-white flex flex-col justify-start  items-center w-full sticky top-16 h-[calc(100vh-16rem)] ">
  <!--  Create a Goal-->
  <%= link_to '+ Create a goal',
              new_goal_path,
              data: { turbo_frame: "modal" },
              class: "h-fit w-full rounded-3xl py-1 text-center bg-light-bg-darkPurple text-white block font-bold " %>

<!--  Categories Section-->
  <div class="flex flex-col h-full w-full border border-solid border-gray-200 rounded-lg  bg-light-sideNav ">
    <!--      Add a category Button-->
    <div class="flex justify-between items-center bg-white w-full  rounded-t-xl p-2">
      <p class="font-semibold">Categories</p>
      <%= link_to '+', new_category_path,
                  data: { turbo_frame: "modal" },
                  class: "border border-solid border-gray-200 h-5 w-5 flex justify-center items-center p-4 bg-light-bg-secondary rounded-2xl text-2xl text-light-text-main" %>
    </div>
    <!--    Categories-->
    <div class="overflow-auto w-full py-2">
      <%= render partial: 'categories/index' %>
    </div>
  </div>
  <!--  Account Settings, Sign Out, Logo-->
  <div class="flex flex-col justify-start items-start gap-y-2 px-5 w-full text-light-text-categories font-semibold self-end">
    <% if user_signed_in? %>
      <p> Change Theme </p>
      <%= link_to 'Account Settings', edit_user_registration_path %>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo: "false" } %>
    <% else %>
      <%= link_to "Log in", new_user_session_path %>
      <%= link_to "Register", new_user_registration_path %>
    <% end %>
    <p class="font-black mt-6">GoalHive.Inc â„¢</p>
  </div>
</div>

