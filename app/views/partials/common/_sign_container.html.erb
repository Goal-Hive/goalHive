<div class="text-black w-full h-screen flex justify-center items-center bg-light-bg-lightYellow ">
  <div class="relative">
    <%= image_tag 'orangeblur.png', class:"absolute top-0  right-0 w-52 h-auto object-contain z-10 "%>
    <%= image_tag 'purpleblur.png', class:"absolute bottom-0 left-0  w-52 h-auto object-contain z-10" %>
    <div class="p-24">
      <div class="bg-white border-2 border-solid border-gray-100 max-w-md w-fit p-8 rounded-xl flex flex-col gap-y-3 items-center relative z-20">
        <div class="w-full text-center p-4 rounded-lg"
             style="background: linear-gradient(82deg, #3A00FF -19.94%, #9773FE 31.65%, #F4E7FD 100.99%);
               background-size: 100% auto; background-position: center;">
          <%= image_tag 'welcoming-hive.jpg',
               alt:"Group of welcoming people",
               class:"mt-[-32px] pt-6 lg:w-max max-w-full h-auto object-contain mx-auto" %>
        </div>
        <div class=" flex flex-col gap-y-3 w-full">
          <div class=" text-center">
            <h2 class="text-2xl font-bold p-2 text-light-text-darkGray">Welcome to
              Goal<span class="text-light-text-lightPurple">Hive</span></h2>
          </div>
          <!--  Sign in/up content-->
          <%= yield %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
